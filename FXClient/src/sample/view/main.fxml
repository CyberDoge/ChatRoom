<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.view.SignInController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
       <AnchorPane prefHeight="374.0" prefWidth="436.0">
           <children>
               <ImageView accessibleRole="PAGINATION" fitHeight="150.0" fitWidth="200.0" layoutY="42.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../../logo.png" />
                   </image></ImageView>
               <Label layoutX="115.0" layoutY="111.0" text="Welcome to chat-room">
                   <font>
                       <Font size="22.0" />
                   </font></Label>
               <TextField fx:id="loginField" layoutX="176.0" layoutY="218.0" onAction="#signInAction" />
               <Label layoutX="100" layoutY="223" text="login" />
            <Label layoutX="101.0" layoutY="268.0" text="password" />
            <PasswordField fx:id="passwordField" layoutX="176.0" layoutY="263.0" onAction="#signInAction" />
            <Button fx:id="signInBtn" layoutX="101.0" layoutY="310.0" mnemonicParsing="false" onAction="#signInAction" text="sign in" />
            <Button fx:id="signUpBtn" layoutX="305.0" layoutY="310.0" mnemonicParsing="false" onAction="#signUpAction" text="sign up" />
            <Label layoutX="176.0" layoutY="161.0" fx:id="eventLabel" />
           </children>
       </AnchorPane>
   </children>
